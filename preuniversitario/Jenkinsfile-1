pipeline {
  agent { label 'linux' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  environment {
    SONAR_TOKEN = credentials('jenkins-sonar')  // nombre del ID de la credencial
  }
  stages {
    stage('Scan') {
      steps {
        withSonarQubeEnv('sql1') {
          sh './mvnw clean verify sonar:sonar -Dsonar.login=$SONAR_TOKEN'
        }
      }
    }
  }
}
